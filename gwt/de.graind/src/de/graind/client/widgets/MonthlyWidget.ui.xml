<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="de.graind.client.widgets.MonthlyWidget.Style">
		.buttonLabel {
		    background-color: #000;
		    cursor:pointer;
		    margin:0pt;
		    padding:3px 5px;
		    text-decoration:none;
		    vertical-align: middle;
		    color: #FFF;
		}
		.buttonLabelHovered {
		    cursor:pointer;
		    margin:0pt;
		    padding:3px 5px;
		    text-decoration:none;
		    vertical-align: middle;
		    background-color: #EEE;
		    color: #222;
		}
		.currentMonthLabel {
			color: #888;
			font-size: 3em;
			opacity: 0.5;
		}
		.normal {
			color: #FFF;
			font-size: 1.3em;
			opacity: 0.5;
		}
		
		.dayWithoutEvent {
			color: #FFF;
			font-size: 1.3em;
			text-align: center;
		}
		.dayWithEvent {
			border-bottom: 1px solid orange;
			color: #FFF;
			font-size: 1.3em;
			text-align: center;
		}
		.firstDayOfWeekWithoutEvent {
			color: #FFF;
			font-size: 1.5em;
			text-align: center;
			font-weight: bold;
		}
		.firstDayOfWeekWithEvent {
			border-bottom: 1px solid orange;
			color: #FFF;
			font-size: 1.5em;
			text-align: center;
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel width="100%" height="100%">
		<g:DockLayoutPanel width="100%" height="100%" unit="PX">
			<g:west size="30">
				<g:VerticalPanel verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER" height="100%" width="100%" ui:field="prevButton">
					<g:Label text="&#9668;" horizontalAlignment="ALIGN_CENTER" wordWrap="false"/>
				</g:VerticalPanel>
			</g:west>
			<g:east size="30">
				<g:VerticalPanel verticalAlignment="ALIGN_MIDDLE" horizontalAlignment="ALIGN_CENTER" height="100%" width="100%" ui:field="nextButton">
					<g:Label text="&#9658;" horizontalAlignment="ALIGN_CENTER" wordWrap="false"/>
				</g:VerticalPanel>
			</g:east>
			<g:center>
				<g:LayoutPanel>
<!-- 					<g:layer top="-2px" height="2em" left="-3px" width="100%"> -->
<!-- 						<g:Label text="Calendar" styleName="{style.normal}"/> -->
<!-- 					</g:layer> -->
					<g:layer top="-1ex" height="4em" right="-1ex" width="100%">
						<g:Label horizontalAlignment="ALIGN_RIGHT" wordWrap="false" ui:field="currentMonthLabel" styleName="{style.currentMonthLabel}"></g:Label>
					</g:layer>					
					<g:layer top="0px" left="15px" height="100.0pct" right="15px">
						<g:VerticalPanel verticalAlignment="ALIGN_MIDDLE" height="100%" width="100%">
							<g:FlexTable ui:field="daysPanel" width="100%" height="66%"/>
						</g:VerticalPanel>
					</g:layer>
				</g:LayoutPanel>
			</g:center>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 