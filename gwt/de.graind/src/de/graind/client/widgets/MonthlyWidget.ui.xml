<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.gwt-Button-graind {
	    background: transparent #EEE;
	    border:1px outset #CCC;
	    cursor:pointer;
	    margin:0pt;
	    padding:3px 5px;
	    text-decoration:none;
		}
		.currentMonthLabel {
			color: #555;
			font-size: 2em;
		}
		.normal {
			color: #EEE;
			font-size: 1.2em;
		}
	</ui:style>
	<g:HTMLPanel width="100%" height="100%">
		<g:DockLayoutPanel width="100%" height="100%" unit="PX">
			<g:east size="20"><g:Button text="&#9658;" ui:field="prevButton" styleName="{style.gwt-Button-graind}"/></g:east>
			<g:west size="20"><g:Button text="&#9668;" ui:field="nextButton" styleName="{style.gwt-Button-graind}"/></g:west>
			<g:center>
				<g:LayoutPanel>
					<g:layer top="-2px" height="2em" left="-3px" width="100%">
						<g:Label text="Calendar" styleName="{style.normal}"/>
					</g:layer>
					<g:layer top="30px" height="30px" right="0px" width="100%">
						<g:Label horizontalAlignment="ALIGN_RIGHT" wordWrap="false" ui:field="currentMonthLabel" styleName="{style.currentMonthLabel}"></g:Label>
					</g:layer>					
					<g:layer top="0px" left="0px" height="100%" width="100%">
						<g:HorizontalPanel horizontalAlignment="ALIGN_LEFT" spacing="3" ui:field="daysPanel" width="100%" height="100%" borderWidth="0" verticalAlignment="ALIGN_MIDDLE"/>
					</g:layer>
				</g:LayoutPanel>
			</g:center>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 