<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:="urn:import:de.graind.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel width="100%" height="100%">
		<g:DockLayoutPanel unit="PX" width="100%" height="100%">
			<g:north size="23.0">
				<g:DockLayoutPanel unit="PX">
					<g:west size="200.0">
						<g:SimplePanel ui:field="topRowLeft"/>
					</g:west>
					<g:east size="100.0">
						<UserStatusWidget ui:field="topRowRight"/>
					</g:east>
					<g:center>
						<g:SimplePanel ui:field="topRowCenter"/>
					</g:center>
				</g:DockLayoutPanel>
			</g:north>
			<g:south size="150.0">
				<g:DockLayoutPanel unit="PX">
					<g:west size="200.0">
						<g:SimplePanel ui:field="calSpaceLeft"/>
					</g:west>
					<g:center>
						<MonthlyWidget ui:field="calSpaceMonthly"/>
					</g:center>
				</g:DockLayoutPanel>
			</g:south>
			<g:center>
				<g:DockLayoutPanel unit="PX">
					<g:west size="200.0">
						<g:SimplePanel/>
					</g:west>
					<g:center>
						<g:SimplePanel ui:field="picSpace"/>
					</g:center>
				</g:DockLayoutPanel>
			</g:center>
		</g:DockLayoutPanel>		
	</g:HTMLPanel>
</ui:UiBinder> 