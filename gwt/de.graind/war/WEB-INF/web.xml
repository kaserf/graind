<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Picasa Proxy Servlet -->
  <servlet>
    <servlet-name>picasaProxyServlet</servlet-name>
    <servlet-class>de.graind.server.PicasaProxyServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>picasaProxyServlet</servlet-name>
    <url-pattern>/de_graind/picasaProxyService</url-pattern>
  </servlet-mapping>
  
  <!-- Graind Servlet -->
  <servlet>
    <servlet-name>graindServlet</servlet-name>
    <servlet-class>de.graind.server.GraindServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>graindServlet</servlet-name>
    <url-pattern>/de_graind/graindService</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
