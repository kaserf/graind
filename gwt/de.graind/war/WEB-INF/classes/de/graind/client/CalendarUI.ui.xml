<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:="urn:import:de.graind.client" xmlns:graind="urn:import:de.graind.client.widgets">
<!-- 	<ui:style src="./css/calendar.css" /> -->
	<ui:style>
		body{
			background-color:  #050505;
			heigh: 100%;
			color: #FFF;
		}
		
		.headlineLeft {
			background-color: #222;
			color: #FFF;
			opacity: 0.5;
		}
		.headlineCenter {
			border-right: 1px solid #555;
			border-left: 1px solid #555;
			background-color: #222;
			color: #FFF;
			opacity: 0.5;
		}
		.headlineRight {
			background-color: #222;
			color: #FFF;
			opacity: 0.5;
		}

		.calspaceLeft{
			background-color: #333;
			opacity: 0.5;
		}
		.calspaceCenter{
			background-color: #333;
			border-left: 1px solid #555;
			opacity: 0.5;
		}
		
		.picspace{
			border-top: 1px solid #555;
			border-bottom: 1px solid #555;
			padding-top: -1px;
			padding-bottom: -1px;
		}
		.picspaceLeft{
		}
		.picspaceCenter{
		}
		
		
	</ui:style>
	
	<g:HTMLPanel width="100%" height="100%">
		<g:DockLayoutPanel unit="PX" width="100%" height="100%">
			<g:north size="30.0">
				<g:DockLayoutPanel unit="PX">
					<g:west size="200.0">
						<g:SimplePanel ui:field="topRowLeft" styleName="{style.headlineLeft}"/>
					</g:west>
					<g:east size="100.0">
						<LogoutWidget ui:field="topRowRight" styleName="{style.headlineRight}" width="100%" height="100%"/>
					</g:east>
					<g:center>
						<g:SimplePanel ui:field="topRowCenter" styleName="{style.headlineCenter}"/>
					</g:center>
				</g:DockLayoutPanel>
			</g:north>
			<g:south size="150.0">
				<g:DockLayoutPanel unit="PX">
					<g:west size="200.0">
						<graind:DayWidget ui:field="calSpaceLeft" styleName="{style.calspaceLeft}"/>
					</g:west>
					<g:center>
						<MonthlyWidget ui:field="calSpaceMonthly" styleName="{style.calspaceCenter}" width="100%" height="100%"/>
					</g:center>
				</g:DockLayoutPanel>
			</g:south>
			<g:center>
				<g:DockLayoutPanel unit="PX" styleName="{style.picspace}">
					<g:west size="200.0">
						<g:SimplePanel/>
					</g:west>
					<g:center>
						<g:SimplePanel ui:field="picSpace"/>
					</g:center>
				</g:DockLayoutPanel>
			</g:center>
		</g:DockLayoutPanel>		
	</g:HTMLPanel>
</ui:UiBinder> 