<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.large {
			font-size: 11em;
			color: #000;
		}
		.medium {
			color: #555;
			font-size: 2em;
		}
		.normal {
			color: #EEE;
			font-size: 1.2em;
		}
	</ui:style>
	<g:HTMLPanel width="200px" height="150px">
		<g:LayoutPanel>
			<g:layer top="-2px" height="2em" left="-3px" width="100%">
				<g:Label text="Today" styleName="{style.normal}"/>
			</g:layer>
			<g:layer top="30px" height="30px" right="0px" width="100%">
					<g:Label ui:field="monthAndYear" horizontalAlignment="ALIGN_RIGHT" styleName="{style.medium}"/>
			</g:layer>
			<g:layer right="-10px" top="30px" height="150px" width="100%">
					<g:Label ui:field="day" horizontalAlignment="ALIGN_RIGHT" styleName="{style.large}"></g:Label>
			</g:layer>
		</g:LayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 