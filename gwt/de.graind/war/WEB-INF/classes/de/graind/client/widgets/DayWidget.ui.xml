<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.day {
			font-size: 10em;
			color: #000;
			margin-right: 0px;
			margin-bottom:0px;
		}
	</ui:style>
	<g:HTMLPanel width="200px" height="150px">
		<g:Label ui:field="day" horizontalAlignment="ALIGN_RIGHT" styleName="{style.day}"></g:Label>
	</g:HTMLPanel>
</ui:UiBinder> 