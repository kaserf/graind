<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.day {
			font-size: 11em;
			color: #000;
			margin-right: 0px;
			margin-bottom:0px;
			vertical-align: top;
		}
		.monthAndYear {
			color: #555;
			font-size: 1.2em;
			padding-right: 3px;
			padding-top: 3px;
			vertical-align: bottom;
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel width="200px" height="150px">
		<g:DockLayoutPanel  width="100%" height="100%" unit="PX">
			<g:north size="30">
				<g:Label ui:field="monthAndYear" horizontalAlignment="ALIGN_RIGHT" styleName="{style.monthAndYear}"/>
			</g:north>
			<g:center>
				<g:Label ui:field="day" horizontalAlignment="ALIGN_RIGHT" styleName="{style.day}"></g:Label>
			</g:center>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 